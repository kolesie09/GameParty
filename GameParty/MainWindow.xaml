<Window x:Class="GameParty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameParty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        

        <StackPanel Orientation="Horizontal" Height="60" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <Button Content="Jaka to melodia" MinWidth="100" Click="Button_Click"/>
            <Button Content="Kolejna gra" MinWidth="100" Margin="10,0,0,0"/>
        </StackPanel>



        <Frame x:Name="Main" NavigationUIVisibility="Hidden" Margin="0,60,0,0" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
